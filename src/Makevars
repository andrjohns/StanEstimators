PKG_CPPFLAGS = -I"include" -D_REENTRANT -DSTAN_THREADS
PKG_CPPFLAGS += -DSTRICT_R_HEADERS -D_HAS_AUTO_PTR_ETC=0 -DEIGEN_PERMANENTLY_DISABLE_STUPID_WARNINGS
PKG_CXXFLAGS += $(shell "${R_HOME}/bin/Rscript" -e "RcppParallel::CxxFlags()" | tail -n 1)
PKG_LIBS = $(shell "${R_HOME}/bin/Rscript" -e "cat(paste0('-L', shQuote(RcppParallel::tbbLibraryPath())))" | tail -n 1)
PKG_LIBS += $(shell "${R_HOME}/bin/Rscript" -e "cat(paste0('-l', gsub('lib', '', tools::file_path_sans_ext(list.files(RcppParallel::tbbLibraryPath() , pattern='(lib)?tbb(malloc|[0-9]*)?\\.')))))" | tail -n 1)
